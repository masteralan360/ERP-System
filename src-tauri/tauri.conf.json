{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Asaas",
  "version": "1.5.8",
  "identifier": "com.asaas.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Asaas",
        "label": "main",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "decorations": false,
        "transparent": false
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      },
      "csp": "default-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: asset://* http://asset.localhost https://asset.localhost https: data: blob:; media-src 'self' asset: asset://* http://asset.localhost https://asset.localhost; connect-src 'self' https: ws:; font-src 'self' https: data:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/masteralan360/Asaas/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      },
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEUwOTQ3MENENDBDQTNBRjIKUldUeU9zcEF6WENVNEkzd3FGOFlKckMzMmN6YWNEQjU4ZDFKYXl5dTRnZWsxMzJYZ1ZxenBKdDcK"
    }
  }
}